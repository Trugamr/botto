{
  "compilerOptions": {
    "module": "ESNext",
    // Switch from "nodenext" to "node"
    // See: https://github.com/microsoft/TypeScript/issues/50058
    "moduleResolution": "node",
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
